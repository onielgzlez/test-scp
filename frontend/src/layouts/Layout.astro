---
interface Props {
  title: string
}

const { title = 'N8N Chatbot' } = Astro.props
import "../styles/global.css";
---

<!DOCTYPE html>
<html lang="en" class="h-full dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body class="flex flex-col min-h-full bg-gray-900 text-white transition-colors duration-300">
    <div class="flex-grow flex flex-col">
      <slot />
    </div>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    padding: 0;
    width: 100%;
  }
</style>
